{
  "configuration": {
    "name": "Default",
    "appenders": {
      "Console": {
        "name": "Console-Appender",
        "target": "SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "[%highlight{%level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue}] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"
        }
      },
      "SplunkHttp": {
        "name": "splunk_logger",
        "url": "http://localhost:8088",
        "token": "3d5f0650-0d0f-41b5-bd04-7e8f53486488",
        "index": "ecommerceindex",
        "source": "eCommerceApp",
        "sourceType": "log4j2",
        "messageFormat": "text",
        "host": "local",
        "middleware": "HttpEventCollectorUnitTestMiddleware",
        "disableCertificateValidation": "true",
        "PatternLayout": {
          "pattern": "%d{yyyy-MM-dd HH:mm:ss.SSS 'GMT'ZZ} - %msg"
        }
      }
    },
    "loggers": {
      "logger": {
        "name": "com.example.demo",
        "level": "info",
        "appender-ref": {"ref": "splunk_logger"}
      },
      "root": {
        "level": "info",
        "appender-ref": {"ref": "Console-Appender"}
      }
    }
  }
}